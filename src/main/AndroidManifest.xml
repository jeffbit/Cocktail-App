<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jeff.mtbtrailapp">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Cocktail App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".UI.Activity.ReportActivity"></activity>
        <activity android:name=".UI.Activity.DrinkOnClickActivity" />
        <activity android:name=".UI.Activity.FavoriteDrinksFrameActivity" />
        <activity android:name=".UI.Activity.UserInfoFrameActivity" />
        <activity
            android:name=".UI.Activity.LoggedInUserActivity"
            android:label="Cocktails"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".UI.Activity.MainActivity"
            android:label="Cocktail App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.EditUserInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userInfoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Info"
            android:textAlignment="center"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/userFirstNameTV"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textAlignment="center"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/userFirstNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/userLastNameTV"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textAlignment="center"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/userLastNameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/userAgeTV"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textAlignment="center"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/userAgeET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Age"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/userSexTV"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Sex"
                android:textAlignment="center"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/userRG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/userMaleRB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/userFemaleRB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/userPhoneTV"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textAlignment="center"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/userPhoneET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="10 Digit Phone"
                android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/userSaveBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/side_nav_bar"
            android:paddingTop="15dp"
            android:text="Save" />

        <Button
            android:id="@+id/userBackBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/side_nav_bar"
            android:paddingTop="15dp"
            android:text="Back" />

    </LinearLayout>
</FrameLayout>